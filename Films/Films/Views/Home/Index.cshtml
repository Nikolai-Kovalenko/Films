@model Films.Models.ViewModels.HomeVM


<div class="container">
    <div class="text-center">
        <button class="btn btn-dark filter-button" data-filter="all">All</button>
        @foreach (var obj in Model.Category)
        {
            <button class="btn btn-outline-secondary filter-button" data-filter="@obj.Name.Replace(' ', '_')">
                @obj.Name
            </button>
        }
    </div>

    <br />

    <table class="table table-bordered table-striped" style="width:100%">
        <tread>
            <tr>
                <th style="width: 60%;">
                    Film
                </th>
                <th style="width: 10%;">
                    Director
                </th>
                <th style="width: 15%;">
                    Release
                </th>
            </tr>
    </table>

    <div class="row">
        @foreach (var prod in Model.FilmDTO)
        {
            <partial name="_IndividualFilmsCard" model="prod" />
                //display all active films
        }
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $(".filter-button").click(function () {
                var value = $(this).attr('data-filter');
                if (value == "all") {
                    $('.filter').show('1000');
                } else {
                    $('.filter').hide();
                    $('.filter.' + value).show();
                }
            });
        });
    </script>
}
