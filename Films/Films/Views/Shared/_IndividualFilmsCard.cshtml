@model Films.Models.DTO.FilmDTO

<div class="col-lg-12 col-md-6 pb-2 filter @string.Join(" ", Model.CategoryList.Select(c => c.Name.Replace(" ", "_")))">

    <table class="table table-bordered table-striped" style="width:100%">
        <tbody>
            <tr>
                <td style="width: 60%;">
                    <!-- Card-->
                    <div class="card bg-white rounded shadow-sm" style="border:1px solid #222">
                        <div class="card-body px-3 pt-1 pb-1 row">
                            <a class="col-7"><label class="float-left">@Model.Name</label></a>
                        </div>

                        <div class="card-body p-1 px-3 row">

                            @foreach (var category in Model.CategoryList)
                            {
                                <div class="col-2">
                                    <span class="badge border w-100 text-dark" style="background-color:lavenderblush">@category.Name</span>
                                </div>
                            }

                        </div>

                        <div class="card-body p-1 px-3 row">
                            <div class="col-12 pt-2" style="font-size:13px; text-align:justify">
                                <p> @Model.Director</p>
                            </div>
                        </div>

                    </div>
                </td>

                <td style="width: 10%;">@Model.Director</td>
                <td style="width: 15%;">@Model.Release</td>
            </tr>
        </tbody>
    </table>

</div>