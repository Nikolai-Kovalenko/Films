@model Films.Models.DTO.FilmDTO


<form method="post" asp-action="Create">
    <div class="border p-3 bg-white">
        @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
        <div class="form-group row">
            <h2 class="text-info pl-3">Add category</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="Director"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Director" class="form-control" />
                        <span asp-validation-for="Director" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="Release"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Release" class="form-control" type="date" 
                        value={new Date().toLocaleDateString('en-GB').split('/').join('.');}/>
                        <span asp-validation-for="Release" class="text-danger"></span>
                    </div>
                </div>
@*
                <div class="form-group">
                        <div class="sd-multiSelect form-group row py-2">
                            <div class="col-4">
                               <label asp-for="FilmDTO.CategoryIdList">Categories:</label>
                            </div>
                            <div class="col-8">
                                <select asp-for="FilmDTO.CategoryIdList" asp-items="@Model.CategorySelectList" multiple id="current-job-role" class="sd-CustomSelect">
                                </select>
                                <span asp-validation-for="FilmDTO.CategoryIdList" class="text-danger"></span>
                            </div>
                        </div>
                </div>
*@

                <div class="form-group row py-2">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <input type="submit" class="btn btn-success w-100" value="Create" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-info w-100"><i class="fas fa-sign-out-alt"></i>  &nbsp; Back</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial"></partial>
    }
}