
<br />
<div class="border p-3 bg-white">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div class="p-2 d-flex align-items-center">
            <h2 class="text-info">List Films</h2>
        </div>
        <div class="col-2 text-right d-flex align-items-center">
            <a asp-controller="Film" asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> &nbsp; Create new Film
            </a>
        </div>
    </div>

    <table id="tblData" class="table table-striped table-bordered pt-2" style="width:100%">
        <thead class="thead-dark">
            <tr class="table-info">
                <th>Id</th>
                <th>Name</th>
                <th>Category</th>
                <th>Director</th>
                <th>Release</th>
                <th></th>
            </tr>
        </thead>
    </table>

</div>

