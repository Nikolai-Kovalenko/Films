@model IEnumerable<Films.Models.DTO.CategoryDTO>

    
<div class="conteiner p-3 bg-white">
    <div class="row pt-4">
        <div class="col-9">
            <h2 class="text-primary">Categoty List</h2>
        </div>
        <div class="col-3 text-right">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> &nbsp; Create new Category
            </a>
        </div>
    </div>

    <br /><br />

    @if(Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
        <tread>
            <tr>
                <th>
                    Category Name
                </th>
                <th>
                    Parent Name
                </th>
                <th>
                    NestingLevel
                </th>
                <th></th>
            </tr>
        </tread>
        <tbody>
                @foreach(var obj in Model)
                {
                    <tr>
                        <td wight="30%">@obj.Name</td>
                        @if (@obj.ParentCategory == null)
                        {
                            <td wight="30%"></td>
                        }
                        else
                        {
                            <td wight="30%">@obj.ParentCategory.Name</td>
                        }
                        <td wight="10%">@obj.NestingLevel</td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Category" asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-primary mx-2">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-controller="Category" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Category exists.</p>
    }

</div>

    
